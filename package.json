{
    "name": "owstat",
    "productName": "owstat",
    "version": "0.1.1",
    "description": "Live Overwatch server status checker",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "lint": "standard"
    },
    "keywords": [],
    "author": "Meadowcottage",
    "license": "GNU General Public License",
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel",
                    "zip"
                ],
                "darwin": [
                    "dmg",
                    "zip"
                ]
            },
            "electronPackagerConfig": {
                "asar": true,
                "quiet": true,
                "icon": "./build/icons/owstat-icon.png"
            },
            "electronWinstallerConfig": {
                "name": "owstat",
                "setupIcon": "./build/icons/owstat-icon.ico"
            },
            "electronInstallerDMG": {
                "background": "./build/background@2x.png",
                "icon": "./build/icons/owstat-icon.icns",
                "overwrite": true
            },
            "github_repository": {
                "owner": "owstat",
                "name": "owstat"
            }
        }
    },
    "dependencies": {
        "animate-components": "^1.3.6",
        "electron-compile": "^6.4.1",
        "electron-config": "^1.0.0",
        "electron-devtools-installer": "^2.0.1",
        "electron-is-dev": "^0.1.2",
        "electron-log": "^2.2.7",
        "is-online": "^7.0.0",
        "is-reachable": "^2.3.2",
        "react": "^15.6.1",
        "react-dom": "^15.6.1"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "^1.5.2",
        "babel-preset-react": "^6.24.1",
        "electron-forge": "^3.0.5",
        "electron-prebuilt-compile": "1.6.11",
        "standard": "^10.0.2"
    },
    "packageIgnore": [
        "LICENSE.md",
        "LICENSE",
        "README.md",
        ".DS_Store",
        ".travis.yml",
        "appveyor.yml",
        "test",
        "out",
        "build/Screenshot.png",
        "build/Mockup-Final.sketch",
        "build/Mockup-Status_icons.sketch "
    ]
}
